<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/product/categories">ParentCategories</a></li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>

<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <!-- <h4 class="card-title mb-0 float-start"></h4>
                <h4 class="mb-0">Product Categories</h4> -->
                <h4 class="card-title mb-0 float-start">Parent Categories</h4>
            </div><!-- end card header -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered border-grey table-hover mb-0">
                        <thead>
                            <tr class="table-dark">
                                <!-- <td>Image</td> -->
                                <td>Name</td>
                                <!-- <td>Action</td> -->
                            </tr>
                        </thead>
                        <tbody>
                        <% if(categories.length>0){ %>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <!-- <td>
                                        <% if(category.image!="" && category.image!=null){%>
                                            <img src="<%= category.image %>" width="100">
                                        <% } %>
                                    </td> -->
                                    <td><%= category.title %></td>
                                </tr>
                            <% }); %>
                        <% }else{ %>
                            <tr>
                                <td colspan="5"  class="text-center text-bold">Sorry. No parent category records exits!</td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>

                <% if(totalPages>1){ %>
                <div class="pt-3">
                    <nav class="">
                        <ul class="pagination justify-content-center">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i == currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/admin/product/categories?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
                <% } %>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end row -->


<%- contentFor('FooterJs') %>



<%- contentFor('BottomJs') %>
<script>
    jQuery(document).ready(function() {
        $(".slide-status").on('change', function(event){
            var status= ($(this).prop('checked'))? '1':'0';
            var id = $(this).data('id');
            window.location = '/admin/cover/category/status/'+id+'/'+status;
        });
    });
</script>