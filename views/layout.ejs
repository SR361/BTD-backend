<!DOCTYPE html>
<html lang="en">

<head>
  
  <meta charset="utf-8" />
  <title><%- title %> - Admin - Beyond The Deal  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta content="Becoming Your Best Admin" name="description" />
  <meta content="Ameet" name="author" />
  <!-- App favicon -->
  <link rel="shortcut icon" href="/assets/images/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/metismenu/dist/metisMenu.min.css" rel="stylesheet">
  <%- HeaderCss %>
  
  <%- include ('./Partials/HeaderStyle') %>

</head>

<body data-layout="vertical" data-topbar="light" class="" data-sidebar="dark">

  <!-- Begin page -->
  <div id="layout-wrapper">

    <%- include ('./Partials/Topbar') %>
    <%- include ('./Partials/Sidebar') %>
    <%- include ('./Partials/Horizontal') %>

    <div class="main-content">
      <div class="page-content">
        <div class="container-fluid">
          <%- breadcrumb %>
          
          <%- body %>

        </div>
      </div>
      <%- include ('./Partials/Footer') %>
    </div>
  </div>

  <%- //include ('./Partials/Rightbar')  %>
  <%- include ('./Partials/VendorScript')  %>

  <%- FooterJs %>

  <script>
    sessionStorage.setItem("is_visited", "layout-direction-ltr");
  </script>

  <script src="/assets/js/app.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"  crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/metismenu/dist/metisMenu.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      $('#side-menu').metisMenu();
    });
  </script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const currentPath = window.location.pathname;
      const menuLinks = document.querySelectorAll("#side-menu a");
  
      menuLinks.forEach(link => {
        if (link.getAttribute("href") === currentPath) {
          link.classList.add("active");
  
          // Expand parent submenu if exists
          let parentLi = link.closest("li");
          let subMenu = link.closest(".sub-menu");
          if (subMenu) {
            subMenu.style.display = "block";
            let mainLi = subMenu.closest("li");
            if (mainLi) {
              mainLi.classList.add("mm-active");
              let mainAnchor = mainLi.querySelector("a.has-arrow");
              if (mainAnchor) {
                mainAnchor.setAttribute("aria-expanded", "true");
              }
            }
          } else {
            parentLi?.classList.add("mm-active");
          }
        }
      });
    });
  </script>
  
  <%- BottomJs %>
</body>

</html>