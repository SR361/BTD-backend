<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Archives</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/archives">Archives</a></li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0 float-start"></h4>
                <a href="/admin/archive/create" class="btn btn-warning  float-end">Add Archives</a>
            </div><!-- end card header -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered border-grey table-hover mb-0">
                        <thead>
                            <tr class="table-dark">
                                <td>Image</td>
                                <td>Title</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                        <% if(archives.length>0){ %>
                            <% archives.forEach(archive => { %>
                                <tr>
                                    <td>
                                        <img src="<%= archive.image %>" width="100" />
                                    </td>
                                    <td><%= archive.title %></td>
                                    <td>
                                        <a href="/admin/archive/edit/<%= archive.id %>" class="btn btn-success btn-sm mr-2">Edit</a> 
                                        <a href="/admin/archive/delete/<%= archive.id %>" id="delete-btn" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% }else{ %>
                            <tr>
                                <td colspan="5"  class="text-center text-bold">Sorry. No archives records exits!</td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>

                <% if(totalPages>1){ %>
                <div class="pt-3">
                    <nav class="">
                        <ul class="pagination justify-content-center">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i == currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/admin/archives?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
                <% } %>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end row -->
<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>