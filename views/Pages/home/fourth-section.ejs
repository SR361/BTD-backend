<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Home</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/pages">Home page</a></li>
                    <li class="breadcrumb-item active">Fourth Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Home page</h4>
            </div>
            <form action="/admin/homepage/fourthsection/update" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <%
                        const contentJSONParse = JSON.parse(fourthsection.content);
                    %>
                    <!-- <div class="row"> -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mt-3">
                                <label for="" class="form-label">Select image One</label>
                                <input type="file" class="form-control" name="image_one">
                                <% if(contentJSONParse.image_one!="" && contentJSONParse.image_one != null){ %>
                                    <div class="image-container mt-3"> 
                                        <div class="inner">
                                            <img src="<%= contentJSONParse.image_one %>" width="200" />
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Title one</label>
                                <input type="text" class="form-control" name="title_one" value="<%= contentJSONParse.title_one %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Button label one</label>
                                <input type="text" class="form-control" name="button_label_one" value="<%= contentJSONParse.button_label_one %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Button Link one</label>
                                <input type="text" class="form-control" name="button_link_one" value="<%= contentJSONParse.button_link_one %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Content one</label>
                                <textarea name="content_one" rows="4" class="form-control content_one"><%= contentJSONParse.content_one %></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mt-3">
                                <label for="" class="form-label">Select image two</label>
                                <input type="file" class="form-control" name="image_two">
                                <% if(contentJSONParse.image_two != "" && contentJSONParse.image_two != null){ %>
