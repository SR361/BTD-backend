<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Home</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/pages">Home page</a></li>
                    <li class="breadcrumb-item active">Fourth Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Home page</h4>
            </div>
            <form action="/admin/homepage/fourthsection/update" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <%
                        const contentJSONParse = JSON.parse(fourthsection.content);
                    %>
                    <div class="row">
                        <div class="mt-3">
                            <label class="form-label">Main title</label>
                            <input type="text" class="form-control" name="main_title" value="<%= contentJSONParse.main_title %>">
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Content one</label>
                            <textarea name="content" rows="4" class="form-control content"><%= contentJSONParse.content %></textarea>
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Select images</label>
                            <input type="file" class="form-control" name="images" multiple>
                            <div class="row mt-3">
                                <% if(pageimages.length>0){ %>
                                    <% pageimages.forEach(pageimage => { %>
                                        <div class="col-md-2 mb-2 mr-3" style="border: 1px solid #e2e5e8;">
                                            <div class="image-container" >  
                                                <div class="inner">
                                                    <a href="/admin/page/delete-image/<%= pageimage.id %>" class="delete-btn" >X</a>
                                                    <img src="<%= pageimage.image %>" style="height: 100%; width: 100%;" />
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/pages" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= fourthsection.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form Layout -->


<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>
<script src="/assets/libs/@ckeditor/ckeditor5-build-classic/build/ckeditor.js"></script>
<script type="text/javascript">
    ClassicEditor.create(
        document.querySelector(".content"),
        {
            ckfinder: {
                uploadUrl: '/admin/page/editor/upload'
            },
        }
    )
    .then(function (editor) {
        console.log('CKEditor initialized successfully:', editor);
        editor.ui.view.editable.element.style.height = "200px";
    })
    .catch(function (error) {
        console.error('Error initializing CKEditor:', error);
    });
</script>