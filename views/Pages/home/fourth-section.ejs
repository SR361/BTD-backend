                                <input type="text" class="form-control" name="button_label_three" value="<%= contentJSONParse.button_label_three %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Button link three</label>
                                <input type="text" class="form-control" name="button_link_three" value="<%= contentJSONParse.button_link_three %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Content three</label>
                                <textarea name="content_three" rows="4" class="form-control content_three"><%= contentJSONParse.content_three %></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mt-3">
                                <label for="" class="form-label">Select image four</label>
                                <input type="file" class="form-control" name="image_four">
                                <% if(contentJSONParse.image_four!="" && contentJSONParse.image_four != null){ %>
                                    <div class="image-container mt-3"> 
                                        <div class="inner">
                                            <img src="<%= contentJSONParse.image_four %>" width="200" />
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Title four</label>
                                <input type="text" class="form-control" name="title_four" value="<%= contentJSONParse.title_four %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Button label four</label>
                                <input type="text" class="form-control" name="button_label_four" value="<%= contentJSONParse.button_label_four %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Button link four</label>
                                <input type="text" class="form-control" name="button_link_four" value="<%= contentJSONParse.button_link_four %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Content four</label>
                                <textarea name="content_four" rows="4" class="form-control content_four"><%= contentJSONParse.content_four %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/pages" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= fourthsection.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form Layout -->


