<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Home</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/pages">Home page</a></li>
                    <li class="breadcrumb-item active">Sixth Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Home page</h4>
            </div>
            <form action="/admin/homepage/sixthsection/update" method="post">
                <%
                    const contentJSONParse = JSON.parse(sixthsection.content);
                %>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Section Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Enter main title" name="title" value="<%= sixthsection?.title %>" required >
                        </div>
                        <div class="col-md-6"></div>
                        <div class="col-md-6 mt-3">
                            <label for="" class="form-label">Main Title</label>
                            <input type="text" class="form-control" placeholder="Enter main title" name="main_title" value="<%= contentJSONParse?.main_title %>" required >
                        </div>
                        <div class="col-md-6 mt-3">
                            <label for="" class="form-label">Sub Title</label>
                            <input type="text" class="form-control" placeholder="Enter sub title" name="subtitle" value="<%= contentJSONParse?.subtitle %>" required >
                        </div>
                        <div class="col-md-6 mt-3">
                            <label for="" class="form-label">Button label</label>
                            <input type="text" class="form-control" placeholder="Enter button labe" name="button_label" value="<%= contentJSONParse?.button_label %>" required >
                        </div>
                        <div class="col-md-6 mt-3">
                            <label for="" class="form-label">Button link</label>
                            <input type="text" class="form-control" placeholder="Enter button link" name="button_link" value="<%= contentJSONParse?.button_link %>" required >
                        </div>
                        <div class="mt-3 row">
                            <label class="form-label col-md-2">Button link full<span class="text-danger">*</span></label>                            
                            <div class="form-check mb-3 col-md-1">
                                <input class="form-check-input" type="radio" name="button_link_full" value="yes" <% if(contentJSONParse.button_link_full=="yes"){%>checked<% }%>>
                                <label class="form-check-label">Yes</label>
                            </div>                        
                            <div class="form-check mb-3 col-md-1">
                                <input class="form-check-input" type="radio" name="button_link_full" value="no" <% if(contentJSONParse.button_link_full=="no"){%>checked<% }%>>
                                <label class="form-check-label">No</label>
                            </div>
                        </div>
                        <div class="col-md-12 mt-3">
                            <label for="" class="form-label">Content</label>
                            <textarea name="content" rows="4" class="form-control" ><%= contentJSONParse.content %></textarea>
                        </div>

                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/pages" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= sixthsection.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>