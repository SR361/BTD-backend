<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Home</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/pages">Home page</a></li>
                    <li class="breadcrumb-item active">Third Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Home page</h4>
            </div>
            <form action="/admin/homepage/thirdsection/update" method="post">
                <div class="card-body">
                    <%
                        const contentJSONParse = JSON.parse(thirdsection.content);
                    %>
                    <div class="row">
                        <div class="mt-3 col-md-6">
                            <label class="form-label">Main title</label>
                            <input type="text" class="form-control" name="main_title" value="<%= contentJSONParse.main_title %>">
                        </div>
                        <div class="mt-3 col-md-6">
                            <label class="form-label">Youtube link</label>
                            <input name="youtube_link" rows="4" class="form-control" value="<%= contentJSONParse.youtube_link %>">
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Content one</label>
                            <textarea name="content_one" rows="4" class="form-control"><%= contentJSONParse.content_one %></textarea>
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Content two</label>
                            <textarea name="content_two" id="" class="form-control content_two"><%= contentJSONParse.content_two %></textarea>
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Content three</label>
                            <textarea name="content_three" id="" class="form-control content_three"><%= contentJSONParse.content_three %></textarea>
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Content fourth</label>
                            <textarea name="content_fourth" id="" class="form-control content_fourth"><%= contentJSONParse.content_fourth %></textarea>
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Content fivth</label>
                            <textarea name="content_fivth" id="" class="form-control content_fivth"><%= contentJSONParse.content_fivth %></textarea>
                        </div>
                        <div class="mt-3 col-md-4">
                            <label class="form-label">Button label one</label>
                            <input type="text" name="button_label_one" id="" class="form-control" value="<%= contentJSONParse.button_label_one %>">
                        </div>
                        <div class="mt-3 col-md-4">
                            <label class="form-label">Button link one</label>
                            <input type="text" name="button_link_one" id="" class="form-control" value="<%= contentJSONParse.button_link_one %>">
                        </div>
                        <div class="mt-5 col-md-4 row">
                            <label class="form-label col-md-5">Button link full one<span class="text-danger">*</span></label>                            
                            <div class="form-check mb-3 col-md-2">
                                <input class="form-check-input" type="radio" name="button_link_one_full" value="yes" <% if(contentJSONParse.button_link_one_full=="yes"){%>checked<% }%>>
                                <label class="form-check-label">Yes</label>
                            </div>                        
                            <div class="form-check mb-3 col-md-2">
                                <input class="form-check-input" type="radio" name="button_link_one_full" value="no" <% if(contentJSONParse.button_link_one_full=="no"){%>checked<% }%>>
                                <label class="form-check-label">No</label>
                            </div>
                        </div>
                        
                        <div class="mt-3 col-md-4">
                            <label class="form-label">Button label two</label>
                            <input type="text" name="button_label_two" id="" class="form-control" value="<%= contentJSONParse.button_label_two %>">
                        </div>
                        <div class="mt-3 col-md-4">
                            <label class="form-label">Button link two</label>
                            <input type="text" name="button_link_two" id="" class="form-control" value="<%= contentJSONParse.button_link_two %>">
                        </div>
                        <div class="mt-5 col-md-4 row">
                            <label class="form-label col-md-5">Button link full two<span class="text-danger">*</span></label>                            
                            <div class="form-check mb-3 col-md-2">
                                <input class="form-check-input" type="radio" name="button_link_two_full" value="yes" <% if(contentJSONParse.button_link_two_full=="yes"){%>checked<% }%>>
                                <label class="form-check-label">Yes</label>
                            </div>                        
                            <div class="form-check mb-3 col-md-2">
                                <input class="form-check-input" type="radio" name="button_link_two_full" value="no" <% if(contentJSONParse.button_link_two_full=="no"){%>checked<% }%>>
                                <label class="form-check-label">No</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/pages" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= thirdsection.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form Layout -->


