<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Home</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/pages">Home page</a></li>
                    <li class="breadcrumb-item active">Fivth Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Home page</h4>
            </div>
            <form action="/admin/homepage/fifthsection/update" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <%
                        const contentJSONParse = JSON.parse(fifthsection.content);
                    %>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mt-3">
                                <label class="form-label">Main title</label>
                                <input type="text" class="form-control" name="main_title" value="<%= contentJSONParse.main_title %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mt-3">
                                <label for="" class="form-label">Enter title one</label>
                                <input type="text" class="form-control" name="title_one" value="<%= contentJSONParse.title_one %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Enter link label one</label>
                                <input type="text" class="form-control" name="link_label_one" value="<%= contentJSONParse.link_label_one %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Enter link one</label>
                                <input type="text" class="form-control" name="link_one" value="<%= contentJSONParse.link_one %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Enter content one</label>
                                <textarea name="content_one" rows="6" class="form-control"><%= contentJSONParse.content_one %></textarea>
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Select image</label>
                                <input type="file" class="form-control" name="image_one">
                                <div class="mt-3">
                                    <div class="image-container mt-3"> 
                                        <div class="inner">
                                            <img src="<%= contentJSONParse.image_one %>" width="200" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mt-3">
                                <label for="" class="form-label">Enter title two</label>
                                <input type="text" class="form-control" name="title_two" value="<%= contentJSONParse.title_two %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Enter link label two</label>
                                <input type="text" class="form-control" name="link_label_two" value="<%= contentJSONParse.link_label_two %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Enter link two</label>
                                <input type="text" class="form-control" name="link_two" value="<%= contentJSONParse.link_two %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Enter content two</label>
                                <textarea name="content_two" rows="6" class="form-control"><%= contentJSONParse.content_two %></textarea>
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Select image two</label>
                                <input type="file" class="form-control" name="image_two">
                                <div class="mt-3">
                                    <div class="image-container mt-3"> 
                                        <div class="inner">
                                            <img src="<%= contentJSONParse.image_two %>" width="200" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="" class="form-label">Subtitle</label>
                            <input type="text" class="form-control" name="subtitle" value="<%= contentJSONParse.subtitle %>">
                        </div>
                        
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/pages" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= fifthsection.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form Layout -->


<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>