<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Service</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/page/service">Service Section</a></li>
                    <li class="breadcrumb-item active">Second Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Service Section</h4>
            </div>
            <form action="/admin/servicepage/thirdsection/update" method="post" enctype="multipart/form-data">
                <div class="card-body row">
                    <%
                        const contentJSONParse = JSON.parse(thirdsection.content);
                    %>
                    <div class="mt-3 col-md-6">
                        <label class="form-label">Enter main title</label>
                        <input type="text" class="form-control" name="main_title" value="<%= contentJSONParse.main_title %>">
                    </div>
                    <div class="mt-3  col-md-6">
                        <label class="form-label">Select image</label>
                        <input type="file" class="form-control" name="image">
                        <% if(contentJSONParse.image !="" && contentJSONParse.image != null){ %>
                            <div class="image-container mt-3"> 
                                <div class="inner">
                                    <img src="<%= contentJSONParse.image %>" width="200" />
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Enter content one</label>
                        <textarea name="content_one" class="form-control content_one" rows="6"><%= contentJSONParse.content_one %></textarea>                            
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Enter content two</label>
                        <textarea name="content_two" class="form-control content_two" rows="6"><%= contentJSONParse.content_two %></textarea>                            
                    </div>
                    <div class="mt-3">
                        <label for="" class="form-label">Enter Short title</label>
                        <input type="text" class="form-control" name="short_title" value="<%=  contentJSONParse.short_title %>">
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/page/service" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= thirdsection.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form Layout -->


<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>
<script src="/assets/libs/@ckeditor/ckeditor5-build-classic/build/ckeditor.js"></script>
<script type="text/javascript">
    ClassicEditor.create(
        document.querySelector(".content_one"),
        {
            ckfinder: {
                uploadUrl: '/admin/page/editor/upload'
            },
        }
    )
    .then(function (editor) {
        console.log('CKEditor initialized successfully:', editor);
        editor.ui.view.editable.element.style.height = "200px";
    })
    .catch(function (error) {
        console.error('Error initializing CKEditor:', error);
    });
// ===================================================================================
    ClassicEditor.create(
        document.querySelector(".content_two"),
        {
            ckfinder: {
                uploadUrl: '/admin/page/editor/upload'
            },
        }
    )
    .then(function (editor) {
        console.log('CKEditor initialized successfully:', editor);
        editor.ui.view.editable.element.style.height = "200px";
    })
    .catch(function (error) {
        console.error('Error initializing CKEditor:', error);
    });
</script>