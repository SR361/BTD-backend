<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Contact</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/page/contact">Contact Section</a></li>
                    <li class="breadcrumb-item active">Contact Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <form action="/admin/contactpage/firstsection/update" method="post">
        <div class="card-header">
            <h4 class="card-title mb-0">Contact Section</h4>
        </div>
        <%
            const contentJSONParse = JSON.parse(firstsection.content);
        %>
        <div class="row mt-2">
            <div class="col-md-12">
                <div class="card ">
                    <!-- <div class="card-header">
                        <h4 class="card-title mb-0">Meta content</h4>
                    </div> -->
                    <div class="card-body row">
                        <div class="col-md-6">
                            <label class="form-label">Title<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Enter title" name="title" value="<%= contentJSONParse.title %>" required >
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Sub Title<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Enter subtitle" name="subtitle" value="<%= contentJSONParse.subtitle %>" required >
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Address one</h4>
                    </div>
                    
                    <div class="card-body">                    
                        <div class="mt-3">
                            <label class="form-label">Enter countrie one</label>
                            <input type="text" class="form-control" name="countrie_one" value="<%= contentJSONParse.countrie_one %>">
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Enter city one</label>
                            <input type="text" class="form-control" name="city_one" value="<%= contentJSONParse.city_one %>">
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Enter address one</label>
                            <textarea type="text" class="form-control" name="address_one" rows="3"><%= contentJSONParse.address_one %></textarea>
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Enter phone one</label>
                            <input type="text" class="form-control" name="phone_one" value="<%= contentJSONParse.phone_one %>">
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Enter email one</label>
                            <input type="text" class="form-control" name="email_one" value="<%= contentJSONParse.email_one %>">
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Address two</h4>
                    </div>            
                    <div class="card-body">                    
                        <div class="mt-3">
                            <label class="form-label">Enter countrie two</label>
                            <input type="text" class="form-control" name="countrie_two" value="<%= contentJSONParse.countrie_two %>">
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Enter city two</label>
                            <input type="text" class="form-control" name="city_two" value="<%= contentJSONParse.city_two %>">
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Enter address two</label>
                            <textarea type="text" class="form-control" name="address_two" rows="3"><%= contentJSONParse.address_two %></textarea>
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Enter phone two</label>
                            <input type="text" class="form-control" name="phone_two" value="<%= contentJSONParse.phone_two %>">
                        </div>
                        <div class="mt-3">
                            <label class="form-label">Enter email two</label>
                            <input type="text" class="form-control" name="email_two" value="<%= contentJSONParse.email_two %>">
                        </div>
                    </div>
                    
                </div>
            </div>
            <!-- Short Description -->
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-body row">
                        <div class="col-md-12">
                            <label class="form-label">Detail</label>
                            <textarea type="text" class="form-control" name="detail" rows="3"><%= contentJSONParse.detail %></textarea>
                        </div>
                    </div>
                </div>
            </div>
             <!-- Short description -->
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-6 text-left">
                    <a href="/admin/page/contact" class="btn btn-secondary w-md">Back</a>
                </div>
                <div class="col-md-6 text-right">
                    <input type="hidden" name="id" value="<%= firstsection.id %>">
                    <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- End Form Layout -->


<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>