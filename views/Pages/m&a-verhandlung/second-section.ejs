<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Home</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/pages">BTD's M&A Verhandlung page</a></li>
                    <li class="breadcrumb-item active">Second Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">BTD's M&A Verhandlung page</h4>
            </div>
            <form action="/admin/m&a-verhandlung/secondsection/update" method="post">
                <div class="card-body">
                    <%
                        const contentJSONParse = JSON.parse(secondsection.content);
                    %>
                    <div class="row">
                    <div class="row">
                        <div class="col-md-12 row">
                            <div class="mt-3 col-md-6">
                                <label for="" class="form-label">Main title<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="main_title" value="<%= contentJSONParse.main_title %>" required>
                            </div>
                            <div class="mt-3 col-md-6">
                                <label for="" class="form-label">Sub title<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="subtitle" value="<%= contentJSONParse.subtitle %>" required>
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Content<span class="text-danger">*</span></label>
                                <textarea name="content" rows="4" class="form-control content" required><%= contentJSONParse.content %></textarea>
                            </div>                            
                            <div class="mt-3 col-md-6">
                                <label class="form-label">Button labe<span class="text-danger">*</span></label>
                                <input type="text" name="button_label" id="" class="form-control" value="<%= contentJSONParse.button_label %>" required>
                            </div>
                            <div class="mt-3 col-md-6">
                                <label class="form-label">Button link<span class="text-danger">*</span></label>
                                <input type="text" name="button_link" id="" class="form-control" value="<%= contentJSONParse.button_link %>" required>
                            </div>
                            <div class="mt-3 row">
                                <label class="form-label col-md-2">Button link full<span class="text-danger">*</span></label>                            
                                <div class="form-check mb-3 col-md-1">
                                    <input class="form-check-input" type="radio" name="button_link_full" value="yes" <% if(contentJSONParse.button_link_full=="yes"){%>checked<% }%>>
                                    <label class="form-check-label">Yes</label>
                                </div>                        
                                <div class="form-check mb-3 col-md-1">
                                    <input class="form-check-input" type="radio" name="button_link_full" value="no" <% if(contentJSONParse.button_link_full=="no"){%>checked<% }%>>
                                    <label class="form-check-label">No</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/pages" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= secondsection.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form Layout -->
<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>
<script src="/assets/libs/@ckeditor/ckeditor5-build-classic/build/ckeditor.js"></script>
<script type="text/javascript">
    ClassicEditor.create(
        document.querySelector(".content"),
        {
            ckfinder: {
                uploadUrl: '/admin/page/editor/upload'
            },
        }
    )
    .then(function (editor) {
        console.log('CKEditor initialized successfully:', editor);
        editor.ui.view.editable.element.style.height = "200px";
    })
    .catch(function (error) {
        console.error('Error initializing CKEditor:', error);
    });
</script>