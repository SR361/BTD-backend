<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">BTD's M&A Verhandlung</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/page/<%= fourthsection?.slug %>">BTD's M&A Verhandlung page</a></li>
                    <li class="breadcrumb-item active">Fourth Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">BTD's M&A Verhandlung page</h4>
            </div>
            <form action="/admin/m&a-verhandlung/fourthsection/update" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <%
                        const contentJSONParse = JSON.parse(fourthsection?.content);
                    %>
                    <!-- <div class="row"> -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mt-3">
                                <label for="" class="form-label">Main Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="main_title" value="<%= contentJSONParse?.main_title %>" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mt-3">
                                <label for="" class="form-label">Select image One</label>
                                <input type="file" class="form-control" name="image_one">
                                <% if(contentJSONParse.image_one!="" && contentJSONParse?.image_one != null){ %>
                                    <div class="image-container mt-3"> 
                                        <div class="inner">
                                            <img src="<%= contentJSONParse?.image_one %>" width="200" />
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mt-3">
                                <label for="" class="form-label">Select image two</label>
                                <input type="file" class="form-control" name="image_two">
                                <% if(contentJSONParse?.image_two != "" && contentJSONParse?.image_two != null){ %>
                                    <div class="image-container mt-3"> 
                                        <div class="inner">
                                            <img src="<%= contentJSONParse?.image_two %>" width="200" />
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mt-3">
                                <label for="" class="form-label">Select image three</label>
                                <input type="file" class="form-control" name="image_three">
                                <% if(contentJSONParse?.image_three != "" && contentJSONParse?.image_three != null){ %>
                                    <div class="image-container mt-3"> 
                                        <div class="inner">
                                            <img src="<%= contentJSONParse?.image_three %>" width="200" />
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mt-3">
                                <label for="" class="form-label">Title one <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="title_one" value="<%= contentJSONParse?.title_one %>" required>
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Content one <span class="text-danger">*</span></label>
                                <textarea name="content_one" rows="4" class="form-control" required><%= contentJSONParse?.content_one %></textarea>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mt-3">
                                <label for="" class="form-label">Title two <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="title_two" value="<%= contentJSONParse?.title_two %>">
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Content two <span class="text-danger">*</span></label>
                                <textarea name="content_two" rows="4" class="form-control" required><%= contentJSONParse?.content_two %></textarea>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mt-3">
                                <label for="" class="form-label">Title three <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="title_three" value="<%= contentJSONParse?.title_three %>" required>
                            </div>
                            <div class="mt-3">
                                <label for="" class="form-label">Content three</label>
                                <textarea name="content_three" rows="4" class="form-control"><%= contentJSONParse?.content_three %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/page/<%= fourthsection?.slug %>" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= fourthsection?.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form Layout -->


<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>