<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">About Us</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/page/about-us">About Us Section</a></li>
                    <li class="breadcrumb-item active">First Section</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">About Us Section</h4>
            </div>
            <form action="/admin/aboutuspage/firstsection/update" method="post" enctype="multipart/form-data">
                <div class="card-body row">
                    <%
                        const contentJSONParse = JSON.parse(firstsection.content);
                    %>
                    <!-- <div class="col-md-6">
                        <label class="form-label">Meta keywords<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter meta keywords" name="metakeywords" value="<%= firstsection.metakeywords %>" required >
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Meta description<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter meta description" name="metadescription" value="<%= firstsection.metadescription %>" required >
                    </div> -->
                    <div class="mt-3 col-md-6">
                        <label class="form-label">Enter title one</label>
                        <input type="text" class="form-control" name="title_one" value="<%= contentJSONParse.title_one %>">
                    </div>
                    <div class="mt-3  col-md-6">
                        <label class="form-label">Select image</label>
                        <input type="file" class="form-control" name="image">
                        <% if(contentJSONParse.image !="" && contentJSONParse.image != null){ %>
                            <div class="image-container mt-3"> 
                                <div class="inner">
                                    <img src="<%= contentJSONParse.image %>" width="200" />
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Enter content one</label>
                        <textarea name="content_one" class="form-control" rows="6"><%= contentJSONParse.content_one %></textarea>                            
                    </div>
                    <hr class="mt-3">
                    <div class="">
                        <label class="form-label">Enter title two</label>
                        <input type="text" class="form-control" name="title_two" value="<%= contentJSONParse.title_two %>">
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Enter content two</label>
                        <textarea name="content_two" class="form-control" rows="6"><%= contentJSONParse.content_two %></textarea>                            
                    </div>
                    <hr class="mt-3">
                    <div class="">
                        <label class="form-label">Enter title three</label>
                        <input type="text" class="form-control" name="title_three" value="<%= contentJSONParse.title_three %>">
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Enter content three</label>
                        <textarea name="content_three" class="form-control" rows="6"><%= contentJSONParse.content_three %></textarea>                            
                    </div>
                    
                    <div class="mt-3">
                        <label for="" class="form-label">Enter Short title</label>
                        <input type="text" class="form-control" name="short_title" value="<%=  contentJSONParse.short_title %>">
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 text-left">
                            <a href="/admin/page/service" class="btn btn-secondary w-md">Back</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="hidden" name="id" value="<%= firstsection.id %>">
                            <button type="submit" class="btn btn-primary w-md float-end">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form Layout -->


<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>