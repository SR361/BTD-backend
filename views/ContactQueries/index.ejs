<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Contact Queries</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/admin/customer-queries">Contact Queries</a></li>
                    <li class="breadcrumb-item active">List</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<% if (message!="" ) { %>
    <div class="alert alert-success">
        <%= message  %>
    </div>
<% } %>
<% if (error!="") { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
<% } %>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered border-grey table-hover mb-0">
                        <thead>
                            <tr class="table-dark">
                                <td>Topic</td>
                                <td>Full Name</td>
                                <td>Email</td>
                                <td>Phone</td>
                                <!-- <td>Address</td> -->
                                <td>Street</td>
                                <td>No</td>
                                <td>Additional Address</td>
                                <td>Countrie</td>
                                <!-- <td>State</td> -->
                                <td>City</td>
                                <td>Postcode</td>
                                <td>Order Number</td>
                                <td>Message</td>
                            </tr>
                        </thead>
                        <tbody>
                        <% if(contactqueries.length>0){ %>
                            <% contactqueries.forEach(contactquerie => { %>
                                <tr>
                                    <td><%= contactquerie.topic %></td>
                                    <td><%= contactquerie.first_name %> <%= contactquerie.last_name %></td>
                                    <td><%= contactquerie.email %></td>
                                    <td><%= contactquerie.phone %></td>
                                    <!-- <td><%= contactquerie.address %></td> -->
                                    <td><%= contactquerie.street %></td>
                                    <td><%= contactquerie.no %></td>
                                    <td><%= contactquerie.additional_address %></td>
                                    <td><%= contactquerie.countrie_name %></td>
                                    <!-- <td><%= contactquerie.state_name %></td> -->
                                    <td><%= contactquerie.city_name %></td>
                                    <td><%= contactquerie.postcode %></td>
                                    <td><%= contactquerie.order_number %></td>
                                    <td><%= contactquerie.message %></td>
                                </tr>
                            <% }); %>
                        <% }else{ %>
                            <tr>
                                <td colspan="5"  class="text-center text-bold">Sorry. No product size records exits!</td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>

                <% if(totalPages>1){ %>
                <div class="pt-3">
                    <nav class="">
                        <ul class="pagination justify-content-center">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i == currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/admin/customer-queries?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
                <% } %>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end row -->
<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>